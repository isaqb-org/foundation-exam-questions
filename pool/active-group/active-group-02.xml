  <stem>
    <text xml:lang="de">
      Was sind mögliche Qualitätsanforderungen an eine Softwarearchitektur?
    </text>
    <text xml:lang="en">
      What are possible quality requirements of a software architecture?
    </text>
  </stem>

  <categoryStatements>

    <categories>
      <category label="a">
        <text xml:lang="de">trifft zu</text>
        <text xml:lang="en">True</text>
      </category>
      <category label="b">
        <text xml:lang="de">trifft nicht zu</text>
        <text xml:lang="en">False</text>
      </category>
    </categories>

    <statements>
      <statement correctCategory="a" identifier="A">
        <text xml:lang="de">
          gute Wartbarkeit
        </text>
        <text xml:lang="en">
          good maintainability
        </text>
      </statement>
      <statement correctCategory="a" identifier="B">
        <text xml:lang="de">
          Erfüllung funktionaler Anforderungen
        </text>
        <text xml:lang="en">
          fulfillment of functional requirements
        </text>
      </statement>
      <statement correctCategory="a" identifier="C">
        <text xml:lang="de">
          Kapazität für viele Benutzer:innen
        </text>
        <text xml:lang="en">
          capacity for many users
        </text>
      </statement>
      <statement correctCategory="b" identifier="D">
        <text xml:lang="de">
          Abgeschlossenheit und Isolierung der Anwendung
        </text>
        <text xml:lang="en">
          seclusion and isolation of the application
        </text>
      </statement>
      <statement correctCategory="a" identifier="E">
        <text xml:lang="de">
          hohe Zuverlässigkeit
        </text>
        <text xml:lang="en">
          high reliability
        </text>
      </statement>
    </statements>

