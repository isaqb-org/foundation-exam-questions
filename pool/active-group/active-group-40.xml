<categoryQuestion xmlns="https://www.isaqb.org/ns/exam/foundation/v1" id="AG-40" points="2">

    <history>
        <item date="2025-04-17">imported from Active Group sample exam</item>
    </history>

    <refersToLgs>
        <lg curriculumVersion="2025.1" lg="04-08" />
    </refersToLgs>

    <stem>
        <text xml:lang="de">
            Was sollten Softwarearchitekt:innen in Bezug auf Architekturentscheidungen tun?
        </text>
        <text xml:lang="en">
            What should a software architect do regarding architectural decisions?
        </text>
    </stem>

    <categoryStatements>

        <categories>
            <category label="a">
                <text xml:lang="de">trifft zu</text>
                <text xml:lang="en">True</text>
            </category>
            <category label="b">
                <text xml:lang="de">trifft nicht zu</text>
                <text xml:lang="en">False</text>
            </category>
        </categories>

        <statements>
            <statement correctCategory="a" identifier="A">
                <text xml:lang="de">
                    begründen können
                </text>
                <text xml:lang="en">
                    be able to justify
                </text>
            </statement>
            <statement correctCategory="a" identifier="B">
                <text xml:lang="de">
                    Abhängigkeiten zu anderen Architekturentscheidungen reduzieren
                </text>
                <text xml:lang="en">
                    reduce dependencies on other architecture decisions
                </text>
            </statement>
            <statement correctCategory="a" identifier="C">
                <text xml:lang="de">
                    systematisch herbeiführen
                </text>
                <text xml:lang="en">
                    create systematically
                </text>
            </statement>

            <statement correctCategory="b" identifier="D">
                <text xml:lang="de">
                    erst nach Umsetzung dokumentieren
                </text>
                <text xml:lang="en">
                    only document after implementation
                </text>
            </statement>
        </statements>
    </categoryStatements>
</categoryQuestion>
